<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D1C7"
    android:padding="35dp"
    tools:context="com.fundoo.bridgelabz.attendence_proj.view.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/bridgrlabz"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="9dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="47dp"
           android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Login"
            android:textSize="18dp"
            android:textColor="#55648f"/>
</RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">


            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_email"
                android:textColorHint="#3B5372"
                android:backgroundTint="#3B5372"/>


            <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="@string/hint_password"
                    android:textColorHint="#3B5372"
                    android:inputType="textPassword"
                    android:maxLines="1"

                    android:backgroundTint="#3B5372"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttonborder"
                android:text="Login"
                android:textColor="#ffffff"
                />
</RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/bridgrlabz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="#D8D1C7"
        android:src="@drawable/logo2x" />
</RelativeLayout>
